<?xml version="1.0"?>
<tweak name="settings/network" extension="network_settings">
    <search>
        <network/>
    </search>

    <target>
		<!-- RestorationMod RECIEVERS -->

		<!-- Connection -->
		<rpc>
			<message name="RestorationMod__sync_player_installed_mod" delivery="reliable" receiver="RestorationMod__connection">
				<param type="int" min="0" max="15" />  <!-- Player -->
				<param type="string" step="0.01" />     <!-- Mod id -->
				<param type="longstring" step="0.01" /> <!-- Mod friendly name -->
			</message>
		</rpc>

		<!-- END OF NETWORK BASE -->	<!-- END OF NETWORK BASE -->	<!-- END OF NETWORK BASE -->

		<!-- Unit -->
		<rpc>

			<message name="sync_underbarrel_switch" receiver="unit" delivery="ordered">
				<param type="int" /> <!-- Weapon slot -->
				<param type="string" /> <!-- Underbarrel weapon id -->
				<param type="bool" /> <!-- Underbarrel active state -->
			</message>

			<message name="shot_blank" delivery="ordered" receiver="unit">
				<param type="unit"/> <!-- shooting unit -->
				<param type="bool"/>
				<param type="int" min="0" max="1"/> <!-- Sub ID -->
			</message>

		</rpc>
    </target>
</tweak>
